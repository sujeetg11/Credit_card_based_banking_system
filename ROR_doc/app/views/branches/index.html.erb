<h1 class="text-center mt-3"> Branches List </h1>


<%= link_to "Create new", new_branch_path, class:"btn btn-success d-grid mt-4", style:"height: 3rem"%>


<div class="container">
  <div class="row row-cols-1 row-cols-md-3 g-2 mt-5">
    <% @branches.each do |branch| %>
      <div class="col">
        <div class="card mt-3" style="width: 22rem;">
          <img src="https://images.unsplash.com/photo-1735945205189-ead34d91cf69?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D">
          <div class="card-body">
            <h5 class="card-title"><%= branch.branch_name %></h5>
            <div class="d-flex justify-content-between">
              <%= link_to "View", branch_path(branch), class: "btn btn-primary" %>
              
              <%= link_to "Destroy", branch_path(branch), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>

              <%= link_to "Update", edit_branch_path(branch), class: "btn btn-primary" %>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


 




