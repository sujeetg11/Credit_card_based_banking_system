<h1 class="text-center mt-3"> Branches List </h1>


<%= link_to "Create New Branch", new_branch_path, class: "btn btn-success d-block mx-auto mt-4 px-5 py-3 text-uppercase fw-bold", style: "font-size: 1.1rem;" %>


<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-2 g-3">
    <% @branches.each do |branch| %>
      <div class="col">
        <div class="card mb-3 shadow-lg" style="max-width: 580px;">
          <div class="row g-0">
            <!-- Image Section -->
            <div class="col-md-4">
              <img src="https://images.unsplash.com/photo-1735945205189-ead34d91cf69?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" 
                   class="img-fluid rounded-start" 
                   alt="Branch Image">
            </div>

            <!-- Details Section -->
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title fw-bold"><%= branch.branch_name %></h5>
                <p class="card-text">
                  <strong>Manager:</strong> <%= branch.branch_manager %><br>
                  <strong>Phone:</strong> <%= branch.branch_phone %><br>
                  <strong>Email:</strong> <%= branch.branch_email %>
                </p>
                <p class="card-text"><small class="text-muted">Created on <%= branch.created_at.strftime("%B %d, %Y") %></small></p>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between">
                  <%= link_to "View", branch_path(branch), class: "btn btn-outline-primary em-2" %>
                  <%= link_to "Update", edit_branch_path(branch), class: "btn btn-outline-warning em-2" %>
                  
                  <%= link_to 'Delete Branch', branch_path(branch), method: :delete, data: { confirm: 'Are you sure you want to discard this branch?' }, class: 'btn btn-outline-danger me-2', title: 'Delete Branch' %>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
